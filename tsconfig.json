{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "types": ["node"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "./built",
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/*"]
}
